<div id="sidebar">
	<div id="profilepic">
		<img src="/images/profile.png" style="
		width:100% ">
		<% if session[:user_id] != nil %>
		<form action="/follow/:id" method="POST" style="float:left; margin-right:20px;">
		<p><a href="/follow/<%= @user.id %>">Click to follow this user</a></p>
	</form>
	</div>
		<p><br><br><b>About me</b><br><br>Name: &nbsp;<%= @user.fname %>&nbsp;<%= @user.lname %></p>
		<p>Email address:&nbsp;<%= @user.email %></p>
		<p>Location:&nbsp;<%= @user.location %></p>
		<p>Interest1:&nbsp;<%= @user.Interest1 %></p>
		<p>Interest2:&nbsp;<%= @user.Interest2 %></p>
		<p>interest3:&nbsp;<%= @user.Interest3 %></p>
		<p>Bio:&nbsp;<%= @user.Bio %></p>
		<% end %>
		<p><b>Users you have followed:</b></p>
		<div id="followed">


		</div>
</div>


<div id="profilefeed">

	<img src="/images/guy.jpg" style="width:20%; ">

	

	<form action="/post_feed" method="POST" style="float:left; margin-right:20px;">
		<label style="">New feed?<br></label>
		<input name="[user]feed" type="text" style="
		width:500px; height:50px;
		">
		<input type="submit" value="submit"><br>
	</form>
	
	<h2><br><br> Your last 10 posts</h2>
	<% current_user.posts.last(10).reverse.each do |x| %>
	<p><%= x.content %></p>
	<% end %>

	</div>
