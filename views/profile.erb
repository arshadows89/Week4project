<div id="sidebar">
	<div id="profilepic">
		<img src="images/profile.png" style="
		width:100% ">
	
	</div>
		<p><b>About me</b><br><br>Name: &nbsp;<%= current_user.fname %>&nbsp;<%= current_user.lname %></p>
		<p>Email address:&nbsp;<%= current_user.email %></p>
		<p>Location:&nbsp;<%= current_user.location %></p>
		<p>Interest1:&nbsp;<%= current_user.Interest1 %></p>
		<p>Interest2:&nbsp;<%= current_user.Interest2 %></p>
		<p>interest3:&nbsp;<%= current_user.Interest3 %></p>
</div>

<div id="profilefeed">
	<form action="/post_feed" method="POST">
		<label style="">New feed?<br></label>
		<input name="[user]feed" type="text" style="
		width:500px; height:50px; position:centered;
		">
		<br><br><input type="submit" value="submit">
	</form>

	<% current_user.posts.last(10).each do |x| %>
	<p><%= x.content %></p>
	<% end %>

	</div>

